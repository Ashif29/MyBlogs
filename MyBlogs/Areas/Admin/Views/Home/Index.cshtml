@model List<MyBlog>

<div class="container">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="text-white py-2">Our Blogs</h1>
            </div>
        </div>
    </div>
    @foreach (var obj in Model.OrderBy(u => u.CreatedDate))
    {
        <div class="ml-0 py-3">
            <div class="row  mb-3 mt-3">
                <div class="col-12 text-center">
                    <h4 class="text-black py-2"> <i>@obj.Title</i> </h4>
                </div>
                <div class="mt-2"> <hr /> </div>
            </div>

            <div class="row">
                <div class="col-3"></div>
                <div class="col-6">
                    <img src="@obj.imgUrl" width="100%" style="border:1px solid #bbb9b9" />
                </div>
                <div class="col-3"></div>

            </div>

            <div class="row">
                <div class="col-6 text-start">
                    <p>Author : @obj.Author</p>
                </div>
                <div class="col-6 text-end">
                    <p>Date : @obj.CreatedDate</p>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <p class="text-center"> <i>@obj.Body</i></p>
                </div>
            </div>
            <div class="mt-2"> <hr /> </div>
        </div>
    }
</div>

